<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/options_single_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >



    <TableLayout
        android:id="@+id/dictTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="40dip"
        android:stretchColumns="4" >

        <TableRow>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" 
                android:text="Player" />

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:src="@drawable/btn_option_sin_plane_red" />

            <RadioGroup
                android:id="@+id/radioGroup"
                style="@style/Animations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:textSize="10dip"
                    android:layout_marginLeft="10.0dp"
                    android:button="@null"
                    android:drawableBottom="@drawable/btn_list_left"
                    android:text="Player"/>

                <RadioButton
                    android:id="@+id/radio_button5"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:textColor="@color/white" 
                	android:text="Player"
                    android:button="@drawable/btn_list_center" />

                <RadioButton
                    android:id="@+id/radio_button6"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:background="@drawable/my_radio_button_bg_shape_1"
                    android:button="@drawable/btn_list_right" />

            </RadioGroup>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:src="@drawable/btn_option_sin_plane_blue" />

            <RadioGroup
                android:id="@+id/RadioGroup01"
                style="@style/Animations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton03"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:button="@drawable/btn_list_left" />

                <RadioButton
                    android:id="@+id/RadioButton01"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:button="@drawable/btn_list_center" />

                <RadioButton
                    android:id="@+id/RadioButton02"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:background="@drawable/my_radio_button_bg_shape_1"
                    android:button="@drawable/btn_list_right" />

            </RadioGroup>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:src="@drawable/btn_option_sin_plane_yellow" />

            <RadioGroup
                android:id="@+id/RadioGroup02"
                style="@style/Animations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton06"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:button="@drawable/btn_list_left" />

                <RadioButton
                    android:id="@+id/RadioButton04"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:button="@drawable/btn_list_center" />

                <RadioButton
                    android:id="@+id/RadioButton05"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:background="@drawable/my_radio_button_bg_shape_1"
                    android:button="@drawable/btn_list_right" />

            </RadioGroup>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:src="@drawable/btn_option_sin_plane_green" />

            <RadioGroup
                android:id="@+id/RadioGroup03"
                style="@style/Animations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton09"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:button="@drawable/btn_list_left" />

                <RadioButton
                    android:id="@+id/RadioButton07"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:button="@drawable/btn_list_center" />

                <RadioButton
                    android:id="@+id/RadioButton08"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dp"
                    android:background="@drawable/my_radio_button_bg_shape_1"
                    android:button="@drawable/btn_list_right" />

            </RadioGroup>

        </TableRow>

    </TableLayout>

</LinearLayout>